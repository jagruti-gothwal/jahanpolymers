generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Contact {
  id              String    @id @default(uuid())
  name            String
  email           String
  phone           String
  project_type    String?
  message         String    @db.Text
  company         String?
  quantity        String?
  status          String    @default("New")
  lastContactedAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
